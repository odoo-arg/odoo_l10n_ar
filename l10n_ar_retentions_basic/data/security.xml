<openerp>

    <!-- RULES REISTRY -->
    <data noupdate="1">

        <record model="ir.rule" id="retention_multi">
            <field name="name">Retention: multi-company</field>
            <field name="model_id" ref="model_retention_retention"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record model="ir.rule" id="retention_line_multi">
            <field name="name">Retention Line: multi-company</field>
            <field name="model_id" ref="model_retention_tax_line"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

    </data>

</openerp>

