<openerp>

    <data>

        <!-- VISTA TREE -->
        <record id="account_sold_check_tree" model="ir.ui.view">
            <field name="name">account.sold.check.tree</field>
            <field name="model">account.sold.check</field>
            <field name="arch" type="xml">
                <tree string="Cheques vendidos" create="false" colors="green:state == 'sold'; gray:state== 'canceled'" delete="false">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- VISTA FORM -->
        <record id="account_sold_check_form" model="ir.ui.view">
            <field name="name">account.sold.check.form</field>
            <field name="model">account.sold.check</field>
            <field name="arch" type="xml">
                <form string="Cheques vendidos" create="false" edit="false" delete="false">
                    <field name="state" invisible="1"/>
                    <header>
                        <button name="cancel_sell_check_document" type="object" string="Anular documento" confirm="Está seguro?" attrs="{'invisible': [('state', '=', 'canceled')]}"/>
                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="partner_id" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            <field name="bank_account_id" attrs="{'invisible': [('bank_account_id', '=', False)]}"/>
                            <field name="account_move_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="commission"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="interests"/>
                        </group>
                    </group>
                    <group string="Cheques">
                        <field name="account_third_check_ids" nolabel="1">
                            <tree>
                                <field name="internal_number"/>
                                <field name="source_partner_id"/>
                                <field name="bank_id"/>
                                <field name="amount" sum="Total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <!-- ACCIÓN  -->
        <record  id="account_sold_check_action" model="ir.actions.act_window">
            <field name="name">Cheques vendidos</field>
            <field name="res_model">account.sold.check</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENÚ  -->
        <menuitem id="account_sold_check_menu" action="account_sold_check_action" name="Cheques vendidos" parent="l10n_ar_account_check.menu_treasury_third_check_menu"/>

    </data>

</openerp>

